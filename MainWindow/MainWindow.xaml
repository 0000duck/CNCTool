<Window x:Class="CNCTool.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CNCTool.MainWindow"
		xmlns:h="http://helix-toolkit.org/wpf"
        Title="CNCTool" Height="600" Width="800">
	
    <Window.Resources>
        <Style x:Key="iconStyle" TargetType="Image">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
		</Style>
    </Window.Resources>
	
    <TabControl>
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Resources/Icons/Code.png" Width="16"/>
                    <Label Content="G-Code Editor"/>
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GridSplitter Width="4" VerticalAlignment="Stretch" Grid.Column="1" ResizeBehavior="PreviousAndNext" Grid.RowSpan="3"/>
                <GridSplitter Height="4" HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="2" ResizeBehavior="PreviousAndNext"/>

                <TextBox Name="editor_textBoxGCode" VerticalScrollBarVisibility="Visible" Grid.Column="0"  Grid.RowSpan="3" IsUndoEnabled="True" UndoLimit="1024" AcceptsReturn="True">
                </TextBox>

                <h:HelixViewport3D Name="view" Grid.Row="0" Grid.Column="2" ShowCoordinateSystem="True" ShowViewCube="False">
                    <h:HelixViewport3D.Camera>
                        <PerspectiveCamera Position="5, -15, 25" LookDirection="-5, 15,-25" UpDirection="0,0,1"/>
                    </h:HelixViewport3D.Camera>
                    <h:DefaultLights/>
					
                    <!--<h:GridLinesVisual3D MajorDistance="10" MinorDistance="1" Center="0,0,0" Thickness="0.02" Normal="0,0,1" Width="100" Length="100"/>-->
					<h:CoordinateSystemVisual3D ArrowLengths="3"/>
                </h:HelixViewport3D>

                <Canvas Grid.Column="2" Grid.Row="2">
					<Button Canvas.Right="20" Canvas.Top="20" Content="Update" Click="buttonUpdateEditPreview_Click"/>
				</Canvas>
            </Grid>

        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Resources/Icons/Machine.png" Width="16"/>
                    <Label Content="Machine"/>
                </StackPanel>
            </TabItem.Header>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Resources/Icons/RunJob.png" Width="16"/>
                    <Label Content="Run Job"/>
                </StackPanel>
            </TabItem.Header>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Resources/Icons/AutoLevelling.png" Width="16"/>
                    <Label Content="AutoLevelling"/>
                </StackPanel>
            </TabItem.Header>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Resources/Icons/Info.png" Width="16"/>
                    <Label Content="About"/>
                </StackPanel>
            </TabItem.Header>
        </TabItem>
    </TabControl>
   
</Window>
