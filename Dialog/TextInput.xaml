<Window x:Class="CNCTool.Dialog.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNCTool.Dialog"
        mc:Ignorable="d"
        Title="TextInput" 
		Width="300" SizeToContent="Height"
		WindowStyle="None"
		MouseDown="Window_MouseDown">
    <StackPanel Orientation="Vertical" Height="Auto">
        <Label Margin="10" Name="labelDescription" FontSize="16" Content="test"/>
        <TextBox  Margin="10, 0, 10, 0" Name="textBoxInput" FontSize="16" x:FieldModifier="public"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Margin="10" Content=" Ok " Click="Ok" FontSize="16"/>
            <Button Margin="10" Content=" Cancel " Click="Cancel" FontSize="16"/>
        </StackPanel>
    </StackPanel>
</Window>
